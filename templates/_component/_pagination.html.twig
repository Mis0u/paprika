{% set current_page = app.request.attributes.get('page') %}

<div class="d-flex justify-content-center">
  <ul class="pagination">
    <li class="page-item {% if current_page - 1 == 0 %}disabled{% endif %}">
      <a class="page-link" href="{{path(route, {'page': current_page - 1})}}">&laquo;</a>
    </li>
    {% for page in range(1, pages) %}
      <li class="page-item {% if page == current_page %}active disabled{% endif %}">
      <a class="page-link" href="{{path(route, {'page': page})}}">{{loop.index}}</a>
    </li>
    {% endfor %}
    <li class="page-item {% if current_page == pages %}disabled{% endif %}">
      <a class="page-link" href="{{path(route, {'page': current_page + 1})}}">&raquo;</a>
    </li>
  </ul>
</div>